# Frontend Test Dockerfile
# Data Aggregator Platform - Testing Environment
FROM node:18-alpine

WORKDIR /app

# Install dependencies
COPY package*.json ./
RUN npm ci

# Copy project files
COPY . .

# Set environment to test
ENV NODE_ENV=test
ENV NEXT_TELEMETRY_DISABLED=1

EXPOSE 3000

# Run in development mode for testing
CMD ["npm", "run", "dev"]
